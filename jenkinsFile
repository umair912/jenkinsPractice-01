pipeline {
  agent any
    
  tools {nodejs "node"}
    
  stages {
        
    stage('Git') {
      steps {
        git 'https://github.com/umair912/jenkinsPractice-01.git'
      }
    }
     
    stage('Build') {
      steps {
        sh 'npm install'
        //  sh '<<Build Command>>'
      }
    }  
    
            
    stage('Test') {
      steps {
        sh 'node test'
      }
    }
  }
}